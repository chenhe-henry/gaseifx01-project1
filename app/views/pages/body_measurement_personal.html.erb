<h1><%= @title %></h1>
<p><%= @content %></p>
<h1><b>Hi, <%= @logged_in_user.name %> from <%= @logged_in_user.city %> ! </b></h1>
<%= form_with(url: "/login", method: "post") do %>
  <div>
    <label>
      Weight<input type="weight" name="weight"/> kg</label>
  </div>
  <div>
    <label>Goal<input type="goal" name="goal"/> kg</label>
    <div>
      <input class="btn btn-primary" type="submit" value="Submit"/>
    </div>
  </div>
  <div>
  <%= @logged_in_user.initial_weight %> kg
  </div>
  <div>
  <%= @logged_in_user.goal %> kg
  </div>
<% end %>


