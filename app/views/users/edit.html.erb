<h1>Edit</h1>

<%= form_for @user do |f| %>
    <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
    </div>
    <div class="field">
        <%= f.label :"Profile Photo" %><br />
        <%= f.file_field :avatar %>
    </div>
    <div class="field">
        <%= f.label :email %><br />
        <%= f.text_field :email %>
    </div>

    <div class="field">
        <%= f.label :city %><br />
        <%= f.text_field :city %>
    </div>

    <div class="actions"><%= f.submit "Edit" %></div>
<% end %>
