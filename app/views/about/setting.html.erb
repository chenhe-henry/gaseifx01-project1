<h1>Your details</h1>
<h2><b>Hi, <%= @logged_in_user.name %>! You are the #<%= @logged_in_user.id %> member using our app.</b></h2>
<p><b>Email:</b> <%= @logged_in_user.email %></p>
<p><b>City:</b> <%= @logged_in_user.city %></p>
<p><b>Gender:</b> <%= @logged_in_user.gender %></p>
<p><b>Height:</b> <%= @logged_in_user.height.to_f %></p>
<p><b>Weight:</b> <%= @logged_in_user.initial_weight.to_f %></p>
<p><b>BMI:</b> <%= @bmi.to_f %></p>
<p><b>Created at:</b> <%= @logged_in_user.created_at %></p>
<hr>

<h1>Update My Profile</h1>
<%= form_for @logged_in_user do |f| %>
    <div class="field">
        <%= f.label :initial_weight %>
        <%= f.text_field :initial_weight %> kg
    </div>
    <div class="field">
        <%= f.label :current_weight %>
        <%= f.text_field :initial_weight %> kg
    </div>
    <div class="actions"><%= f.submit "Sign Up" %></div>
<% end %>
