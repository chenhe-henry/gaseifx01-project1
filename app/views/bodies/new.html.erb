<h1>Update</h1>

<%= form_for @body do |f| %>
    <div class="field">
        <%= f.label :weight %><br />
        <%= f.text_field :weight %> kg
    </div>
    <div class="field">
        <%= f.label :height %><br />
        <%= f.text_field :height %> m
    </div>
    <div class="actions"><%= f.submit "Update" %></div>
<% end %>